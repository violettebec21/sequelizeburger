<div class="container">
  <div class="jumbotron">
    <div class="row">
      <div class="center col-sm-12">
        <div class="burger-image">
          <img src="/assets/img/burger.png" style="width:150px;">
        </div>
        <div class="row">
          <div class="center col-sm-12">
            <h1 class="text-dark">Eat Da Burger</h1>
            <p> Make or order a burger!</p>
            <panel>
          </div>
          <div class="col-sm-6">
            <div class="row">
              <h2>Order a burger!</h2>
              <form class="create-form">

                <div class="form-group">
                  <label for="ca">Burger Name:</label>
                  <input type="text" id="ca" name="name">
                </div>
            </div>
            <button type="submit">Add Burger</button>
            </form>
          </div>
        </div>
      </div>
    </div>
  </div>

  <div class="jumbotron">
    <div class="column">
      <h2 class=".text-dark">Available Burgers</h2>
      <ul>
        {{#each burgers}}
        {{#unless devoured}}
        {{> burgers/burger-block}}
        {{/unless}}
        {{/each}}
      </ul>
    </div>

    <div class="column">
      <h2>Devoured Burgers</h2>
      <ul>
        {{#each burgers}}
        {{#if devoured}}
        {{> burgers/burger-block}}
        {{/if}}
        {{/each}}
      </ul>
    </div>

  </div>
{{!-- close container --}}
</div>
