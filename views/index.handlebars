<div class="container">
  <div class="row">
    <div class="center col-sm-12">
      <img src="/public/assets/img/burger.png">
      <h1 class="text-dark">Eat Da Burger</h1>
    </div>
  </div>

  <div class="row">
    <div class="col-sm-6">
      <br>
      <h2 class=".text-dark">Available Burgers</h2>
      <ul>
        {{#each burgers}}
        {{#unless devoured}}
        {{> burgers/burger-block}}
        {{/unless}}
        {{/each}}
      </ul>
    </div>
  </div>


  <div class="row">
    <div class="col-sm-6">
      <br>
      <h2>Devoured Burgers</h2>
      <ul>
        {{#each burgers}}
        {{#if devoured}}
        {{> burgers/burger-block}}
        {{/if}}
        {{/each}}
      </ul>
    </div>
  </div>

  <div class="row">
    <div class="col-sm-6">
      <h2>Order a burger!</h2>
      <form class="create-form">

        <div class="form-group">
          <label for="ca">Burger Name:</label>
          <input type="text" id="ca" name="name">
        </div>

        <button type="submit">Add Burger</button>
      </form>